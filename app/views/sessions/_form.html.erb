<% wrapper = false unless defined? wrapper %>

<%= form_for @user, url: create_session_path do |f| %>
	<% if wrapper %>
		<div class="wrapper <%= wrapper %>">
	<% end %>
		<div class="field">
			<%= f.label :email %>
			<%= f.text_field :email%>
		</div>
		<div class="field">
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>
	<% if wrapper %>
		</div>
	<% end %>
	<div class="actions">
		<%= link_to t(:user_new), new_user_path %>
		<%= f.submit t(:login), class: :brand %>
	</div>
<% end %>
